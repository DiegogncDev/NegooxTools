<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".productsList.UpdateProductsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE PRODUCTS"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/main_activity_carview_selected">
    </TextView>

    <EditText
        android:id="@+id/etUpdateProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Product Name"
        android:fontFamily="@font/poppins"
        >

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etUpdateTotalPriceOfBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:hint="Total Price of Buy"
            android:fontFamily="@font/poppins"
            >

        </EditText>

        <ImageView
            android:id="@+id/ivUpdateBtnExpandPriceOfBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_expand"
            android:background="@color/black"
            android:layout_gravity="center">
        </ImageView>


        <EditText
            android:id="@+id/etUpdateDateOfBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="date of buy"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:inputType="none"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@drawable/ic_calendar"
            android:fontFamily="@font/poppins"
            >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyUpdateTextViewsPriceOfBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:layout_marginHorizontal="8dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Weight"
            android:layout_marginHorizontal="70dp">

        </TextView>

        <TextView
            android:id="@+id/tvUpdateCourierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Courier Name"
            android:layout_marginHorizontal="4dp">

        </TextView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyUpdateEditTextsPriceOfBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/etUpdatePriceProduct"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Price"
            android:layout_weight="1"
            android:singleLine="true"
            android:fontFamily="@font/poppins"
            >
        </EditText>

        <EditText
            android:id="@+id/etUpdateGramsProduct"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Weight"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginHorizontal="30dp"
            >
        </EditText>

        <EditText
            android:id="@+id/etUpdateCourierTax"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="CourierTax"
            android:singleLine="true"
            android:layout_weight="1">
        </EditText>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyUpdateTextViews2PriceOfBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/tvUpdateCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Card Name"
            android:layout_marginHorizontal="8dp">
        </TextView>

        <TextView
            android:id="@+id/tvUpdateWebName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Web Name"
            android:layout_marginHorizontal="40dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Paypal"
            android:layout_marginHorizontal="15dp">

        </TextView>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyUpdateEditTexts2PriceOfBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:visibility="visible">



        <EditText
            android:id="@+id/etUpdateCardTax"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="CardTax"
            android:layout_weight="1"
            android:singleLine="true">
        </EditText>

        <EditText
            android:id="@+id/etUpdateWebTax"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="WebTax"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp">
        </EditText>

        <EditText
            android:id="@+id/etUpdatePaypalTax"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="PaypalTax"
            android:singleLine="true"
            android:layout_weight="1"
            >
        </EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etUpdateTotalPriceOfSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:layout_weight="1"
            android:hint="Total Price of Sell">

        </EditText>

        <ImageView
            android:id="@+id/ivUpdateBtnExpandPriceOfSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_expand"
            android:background="@color/black"
            android:layout_gravity="center">
        </ImageView>

        <EditText
            android:id="@+id/etUpdateDateOfSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="date of buy"
            android:layout_weight="1"
            android:inputType=""
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@drawable/ic_calendar">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyUpdateTextViewsPriceOfSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Delivery"
            android:layout_marginHorizontal="4dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyUpdateEditTextsPriceOfSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/etUpdateDeliveryCost"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Delivery Cost">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etUpdateDelayInArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:layout_weight="1"
            android:hint="delay in arrival">

        </EditText>

        <EditText
            android:id="@+id/etUpdateDelayOfSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:hint="delay of sale"
            android:layout_weight="1"
            >

        </EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etUpdateProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:hint="profit"
            android:layout_weight="1"
            >
        </EditText>


        <AutoCompleteTextView
            android:id="@+id/actvUpdateCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:hint="Category"
            android:layout_weight="1">

        </AutoCompleteTextView>

    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:id="@+id/cvUpdateButtonAddData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="16dp"
        app:cardBackgroundColor="@color/main_activity_carview_selected"
        app:cardCornerRadius="16dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textSize="30sp"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:textColor="@color/white">

        </TextView>


    </androidx.cardview.widget.CardView>





</LinearLayout>