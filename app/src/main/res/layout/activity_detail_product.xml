<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".productsList.DetailProductActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/main_activity_carview_selected"
        app:cardCornerRadius="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView

            android:id="@+id/tvDetailProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samsung galaxy s7"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            >

        </TextView>


    </androidx.cardview.widget.CardView>

    <!-- Purshased info -->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        android:padding="16dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/main_activity_carview_selected">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp"

                >

                <TextView
                    android:id="@+id/tvDetailTotalPriceBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100$"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>


                <TextView
                    android:id="@+id/tvDetailDateOfBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-15-30"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price Buy"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cardview_info_section"
                app:cardCornerRadius="16dp"
                android:layout_marginHorizontal="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:id="@+id/tvDetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60$"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/tvDetailWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0 kg"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/poppins">

                    </TextView>

                    <TextView
                        android:id="@+id/tvDetailCourierTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.5$"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins">

                    </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_gravity="top|center"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grams kg"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:layout_gravity="center|top"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/tvDetailCourierName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frontliner"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        >

                        <TextView
                            android:id="@+id/tvDetailCardTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.10$"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/tvDetailWebTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.70$"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/tvDetailPaypalTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:text="0.50$"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        >

                        <TextView
                            android:id="@+id/tvDetailCardName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card Tax"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center|top"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/tvDetailWebName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Web Tax"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:layout_gravity="center|top"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paypal"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginEnd="20dp"
                            android:layout_gravity="center|top"
                            android:fontFamily="@font/poppins"
                            >

                        </TextView>

                    </LinearLayout>

                </LinearLayout>






            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purchased Info"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/detail_products_title_bg"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        android:padding="16dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/main_activity_carview_selected">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp"

                >

                <TextView
                    android:id="@+id/tvDetailTotalPriceSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100$"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

                <TextView
                    android:id="@+id/tvDetailDeliveryCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.5$"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

                <TextView
                    android:id="@+id/tvDetailDateOfSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-15-30"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price Sale"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delivery"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sale Info"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/detail_products_title_bg"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        android:padding="16dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/main_activity_carview_selected">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp"

                >

                <TextView
                    android:id="@+id/tvDetailArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 days"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>


                <TextView
                    android:id="@+id/tvDetailDelayOfSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 days"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sale"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">

                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delay of Arrival and Sale"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:background="@color/detail_products_title_bg"
                android:fontFamily="@font/poppins"
                >
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="120dp"
            app:cardCornerRadius="16dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/main_activity_carview_selected">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 $"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profit"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@color/detail_products_title_bg"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>





            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="120dp"
            app:cardCornerRadius="16dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/main_activity_carview_selected">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="computadoras"
                    android:textSize="24sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="category"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@color/detail_products_title_bg"
                    android:fontFamily="@font/poppins"
                    >

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>