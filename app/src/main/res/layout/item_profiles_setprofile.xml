<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvItemProfiles"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/main_activity_carview_selected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvProfilesProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:fontFamily="@font/poppins"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProfilesCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Name"
                android:textStyle=""
                android:layout_margin="4dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>

            <TextView
                android:id="@+id/tvProfilesWebName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Name"
                android:layout_margin="4dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>

            <TextView
                android:id="@+id/tvProfilesCourierName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Courier Name"
                android:layout_margin="4dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>

            <TextView
                android:id="@+id/tvProfilesWithPaypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With Paypal"
                android:layout_margin="4dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>




        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>