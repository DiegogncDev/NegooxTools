<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvItemRankingTop3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/main_activity_carview_selected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_gold_star">

            </ImageView>

            <TextView
                android:id="@+id/tvRankingFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="First"
                android:singleLine="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginHorizontal="17dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>

            <TextView
                android:id="@+id/tvRankingFirstCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0 days"
                android:textSize="20sp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/poppins">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_silver_star">

            </ImageView>

            <TextView
                android:id="@+id/tvRankingSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginHorizontal="17dp"
                android:text="Second"
                android:fontFamily="@font/poppins"
                >

            </TextView>

            <TextView
                android:id="@+id/tvRankingSecondCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0 days"
                android:textSize="20sp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="49dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_bronze_star">

            </ImageView>

            <TextView
                android:id="@+id/tvRankingThirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Thirst"
                android:layout_marginHorizontal="17dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>

            <TextView
                android:id="@+id/tvRankingThirstCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0 days"
                android:textSize="20sp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/poppins"
                >

            </TextView>


        </LinearLayout>

        <TextView
            android:id="@+id/tvStatisticsRankingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ranking Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            >

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>